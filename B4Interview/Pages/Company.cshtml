@page
@model B4Interview.Pages.CompanyModel
@{
    ViewData["Title"] = "Company";
}
<hr />
<div class="card-columns">

    @foreach (var company in Model.Companies)
    {
        <div class="card">
            <div class="card-header p-1 m-0 row">
                <div class="col-4">
                    <img class="w-100 h-100" src="@company.Logo">
                </div>
                <div class="col-8">
                    <b> @company.Name</b>
                    @{
                        var rating = company.Rating;
                        for (int i = 0; i < 5; i++)
                        {
                            if (rating == 0)
                            {
                                <span class="text-success far fa-star"></span>
                            }
                            else if (rating >= 1)
                            {
                                <span class="text-success fas fa-star"></span>
                                rating--;
                            }
                            else
                            {
                                <span class="text-success fas fa-star-half-alt"></span>
                                rating = 0;
                            }
                        }
                    }
                </div>
            </div>
            <div class="card-body">
                <small>@company.Sector</small>
                <p>
                    <ul class="list-inline float-right align-bottom">
                        <li class="list-inline-item">
                            <a asp-page="Review" asp-route-search="@company.Identifier" class="btn btn-sm btn-primary">
                                Reviews <span class="badge badge-light">@company.Reviews.Count()</span>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a asp-page="Interview" asp-route-search="@company.Identifier" class="btn btn-sm btn-success">
                                Interviews <span class="badge badge-light">@company.Reviews.Count()</span>
                            </a>
                        </li>
                    </ul>
                </p>
            </div>
        </div>
    }

</div>

<nav aria-label="Page navigation example">
    <ul class="pagination">
        @if (Model.Index > 0)
        {
            <li class="page-item"><a class="page-link" asp-page="Company" asp-route-index="@(Model.Index - 1)" asp-route-pageSize="@Model.PageSize">Previous</a></li>
        }

        @for (int i = 2; i > 0 && (Model.Index - i >= 0); i--)
        {
            <li class="page-item"><a class="page-link" asp-page="Company" asp-route-index="@(Model.Index - i)" asp-route-pageSize="@Model.PageSize">@(Model.Index - i)</a></li>
        }
        @if (Model.Index > 0)
        {
            <li class="page-item"><a class="page-link" href="#">@Model.Index <span class="sr-only">(current)</span></a></li>
        }

        @for (int i = 0; i < Model.RemainingPagesCount && i < 2; i++)
        {
            <li class="page-item"><a class="page-link" asp-page="Company" asp-route-index="@(Model.Index + i + 1)" asp-route-pageSize="@Model.PageSize">@(Model.Index + i + 1)</a></li>
        }

        @if (Model.RemainingPagesCount > 0)
        {
            <li class="page-item"><a class="page-link" asp-page="Company" asp-route-index="@(Model.Index + 1)" asp-route-pageSize="@Model.PageSize">Next</a></li>
        }
    </ul>
</nav>